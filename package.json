{
	"name": "action-ln",
	"version": "0.0.0",
	"description": "Link files between repositories",
	"main": "src/main.js",
	"scripts": {
		"start": "npm run watch:all",
		"test": "jest",
		"all": "npm run format && npm run lint && npm run test && npm run build",
		"build": "ncc build src/main.js --source-map --minify --out dist/ --license LICENSE && git add ./dist/* --force",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint .",
		"watch:all": "find ./src/ ./test/ -type f | entr npm run all",
		"watch:test": "find ./src/ ./test/ -type f | entr npm test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nobe4/action-ln.git"
	},
	"keywords": [],
	"author": "nobe4",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/nobe4/action-ln/issues"
	},
	"homepage": "https://github.com/nobe4/action-ln#readme",
	"dependencies": {
		"@actions/core": "^1.11.1",
		"@actions/github": "^6.0.0",
		"js-yaml": "^4.1.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.19.0",
		"@types/js-yaml": "^4.0.9",
		"@vercel/ncc": "^0.38.3",
		"eslint": "^9.19.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-jest": "^28.11.0",
		"eslint-plugin-prettier": "^5.2.3",
		"globals": "^15.14.0",
		"jest": "^29.7.0",
		"prettier": "^3.4.2",
		"prettier-eslint": "^16.3.0"
	}
}
